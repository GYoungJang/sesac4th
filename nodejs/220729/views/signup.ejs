                <input type="text" name="id" placeholder="아이디" required autofocus>
            </label><br>
            <label>이름 : 
                <input type="text" name="name" placeholder="이름" required>
            </label><br>
            <label for="gender">비밀번호 :
                <input type="password" name='pw' placeholder="비밀번호" required>
            </label>
        </fieldset><br>
